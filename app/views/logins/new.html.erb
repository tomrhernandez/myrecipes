<%= render 'shared/page_title', title: "Log in" %>

<div class="row">
    <div class="col-md-5 col-md-offset-3 well">
        <%= form_tag '/login' do %>
            <%= label_tag :email %>
            <%= text_field_tag :email %>

            <%= label_tag :password %>
            <%= password_field_tag :password %>

            <%= submit_tag 'Log in', class: 'btn btn-success' %>

        <% end %>
    </div>
</div>
